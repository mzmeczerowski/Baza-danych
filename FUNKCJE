FUNKCJA NR 12
-----Funkcja wypisuje na ilu imprezach byl artysta ------
CREATE FUNCTION Na_ilu_imprezach (@id_artysta INT)
RETURNS INT
AS
BEGIN
RETURN (SELECT COUNT(*) FROM Impreza_artysci WHERE id_artysta = @id_artysta)
END
-------------------Przyklad ---------------------------
SELECT dbo.Na_ilu_imprezach (1) AS Na_ilu
